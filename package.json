{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "tmux-sessionizer-raycast",
  "title": "tmux-sessionizer-raycast",
  "description": "Opens a project in Tmux",
  "icon": "command-icon.png",
  "author": "thomas-delalande",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "tmux",
      "title": "tmux",
      "description": "Open a project",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "tmux",
      "description": "The path to your TMUX instance",
      "type": "file",
      "required": false,
      "title": "TMUX Path",
      "default": "/opt/homebrew/bin/tmux"
    },
    {
      "name": "terminal",
      "description": "Your terminal of choice",
      "type": "appPicker",
      "required": false,
      "title": "Terminal",
      "default": "Terminal"
    },
    {
      "name": "projectsDir1",
      "description": "A containing folder for your projects",
      "type": "directory",
      "required": true,
      "title": "Projects Directory 1"
    },
    {
      "name": "projectsDir2",
      "description": "A containing folder for your projects",
      "type": "directory",
      "required": false,
      "title": "Projects Directory 2"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.47.2"
  },
  "devDependencies": {
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
